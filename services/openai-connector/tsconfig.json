{
	"extends": "../../tsconfig.json",
	"include": ["**/*.ts", "*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": false,
		"paths": {
			"@/*": ["src/*"],
			"tests/*": ["tests/*"],
			"shared/*": ["../../shared/ts/src/*"],
			"gen/*": ["../../gen/ts/*"]
		},
		"types": ["vitest/globals"]
	},
	"ts-node": {
		"compilerOptions": {
			"sourceMap": true,
			"noEmit": false,
			"module": "CommonJS",
			"moduleResolution": "node"
		}
	}
}
