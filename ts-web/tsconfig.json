{
	"extends": "../tsconfig.json",
	"include": ["*.d.ts", "**/*.ts", "**/*.tsx", "*.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"importHelpers": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "ESNext"],
		"types": ["vitest/globals", "@testing-library/jest-dom"],
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"],
			"tests/*": ["tests/*"],
			"public/*": ["public/*"],
			"shared/*": ["../ts-shared/src/*"]
		},
		"plugins": [{ "name": "next" }]
	}
}
