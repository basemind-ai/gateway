{
	"extends": "../../tsconfig.json",
	"include": ["*.d.ts", "**/*.ts", "*.ts", "../../gen/ts/openai/**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": false,
		"paths": {
			"@/*": ["src/*"],
			"tests/*": ["tests/*"],
			"shared/*": ["../../ts-shared/src/*"],
			"gen/*": ["../../gen/ts/*"]
		},
		"types": ["vitest/globals"]
	},
	"ts-node": {
		"compilerOptions": {
			"sourceMap": true,
			"noEmit": false,
			"module": "CommonJS",
			"moduleResolution": "node"
		}
	}
}
